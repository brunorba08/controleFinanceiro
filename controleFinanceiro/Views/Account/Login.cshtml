@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<style>
.login-page {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 85vh;
    padding: 20px;
    box-sizing: border-box;
}

.login-page h1 {
    color: #004080;
    margin-bottom: 5px;
    font-size: 28px;
    text-align: center;
}

.login-page h2 {
    text-align: center;
    margin-bottom: 25px;
    color: #004080;
    font-size: 20px;
    font-weight: normal;
}

.login-page form {
    background-color: white;
    padding: 30px 40px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 51, 102, 0.3);
    width: 320px;
    display: flex;
    flex-direction: column;
}

.login-page .custom-control {
    position: relative;
    width: 100%;
    margin-bottom: 30px;
}

.login-page .custom-control .input-wrapper {
    position: relative;
    width: 100%;
}

.login-page .custom-control input {
    background-color: transparent;
    border: 0;
    border-bottom: 2px #004080 solid;
    display: block;
    width: 100%;
    padding: 15px 35px 15px 30px; 
    font-size: 16px;
    color: #004080;
}

.login-page .custom-control input:focus,
.login-page .custom-control input:valid {
    outline: 0;
    border-bottom-color: #007bff;
}

.login-page .custom-control label {
    position: absolute;
    top: 15px;
    left: 30px;
    pointer-events: none;
}

.login-page .custom-control label span {
    display: inline-block;
    font-size: 16px;
    min-width: 5px;
    color: #004080;
    transition: 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

.login-page .custom-control input:focus + label span,
.login-page .custom-control input:valid + label span {
    color: #007bff;
    transform: translateY(-30px);
}

.login-page .custom-control i.left-icon {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    color: #004080;
    font-size: 18px;
}

.login-page .custom-control i.eye-icon {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    color: #004080;
    font-size: 18px;
    cursor: pointer;
    z-index: 2;
}

.login-page button {
    width: 100%;
    background-color: #0059b3;
    color: white;
    font-weight: 700;
    padding: 10px 0;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    margin-top: 10px;
}

.login-page button:hover {
    background-color: #003d7a;
}

.login-page a {
    display: block;
    margin-top: 15px;
    text-align: center;
    color: #0059b3;
    text-decoration: none;
    font-weight: 600;
}

.login-page a:hover {
    text-decoration: underline;
    color: #003d7a;
}

.login-page p {
    text-align: center;
    font-weight: 600;
    color: red;
    margin: 0 0 10px 0;
}

</style>

<div class="login-page">
    <h1>Faça seu login</h1>
    <br />

    @if (ViewBag.Erro != null)
    {
        <p>@ViewBag.Erro</p>
    }

    <form method="post" action="/Account/Login">
        <!-- EMAIL -->
        <div class="custom-control">
            <i class="bi bi-person-fill left-icon"></i>
            <input type="email" name="Email" required />
            <label>
                <span style="transition-delay:0ms">E</span>
                <span style="transition-delay:50ms">m</span>
                <span style="transition-delay:100ms">a</span>
                <span style="transition-delay:150ms">i</span>
                <span style="transition-delay:200ms">l</span>
                <span style="transition-delay:250ms">:</span>
            </label>
        </div>

        <!-- SENHA -->
        <div class="custom-control">
            <i class="bi bi-lock-fill left-icon"></i>
            <div class="input-wrapper" style="position: relative;">
                <input type="password" name="Senha" id="senhaInput" required />
                <label>
                    <span style="transition-delay:0ms">S</span>
                    <span style="transition-delay:50ms">e</span>
                    <span style="transition-delay:100ms">n</span>
                    <span style="transition-delay:150ms">h</span>
                    <span style="transition-delay:200ms">a</span>
                    <span style="transition-delay:250ms">:</span>
                </label>
                <i class="bi bi-eye eye-icon" id="toggleSenha"></i>
            </div>
        </div>


        <button type="submit">Entrar</button>
        <a href="/Account/Register">Cadastrar</a>
    </form>
</div>

<script>
    document.getElementById('toggleSenha').addEventListener('click', function() {
        const input = document.getElementById('senhaInput');
        const icon = this;
        if (input.type === 'password') {
            input.type = 'text';
            icon.classList.remove('bi-eye');
            icon.classList.add('bi-eye-slash');
        } else {
            input.type = 'password';
            icon.classList.remove('bi-eye-slash');
            icon.classList.add('bi-eye');
        }
    });
</script>

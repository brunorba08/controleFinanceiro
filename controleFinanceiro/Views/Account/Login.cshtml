@{
    ViewData["Title"] = "Login";
}

<style>

    form {
        background-color: white;
        padding: 30px 40px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 51, 102, 0.3);
        width: 320px;
    }

    h2 {
        text-align: center;
        margin-bottom: 25px;
        color: #004080;
    }

    label {
        display: block;
        margin-bottom: 6px;
        font-weight: 600;
    }

    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 8px 12px;
        margin-bottom: 20px;
        border: 1.8px solid #004080;
        border-radius: 4px;
        font-size: 14px;
        transition: border-color 0.3s ease;
    }

        input[type="email"]:focus,
        input[type="password"]:focus {
            border-color: #007bff;
            outline: none;
        }

    button {
        width: 100%;
        background-color: #0059b3;
        color: white;
        font-weight: 700;
        padding: 10px 0;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        button:hover {
            background-color: #003d7a;
        }

    a {
        display: block;
        margin-top: 15px;
        text-align: center;
        color: #0059b3;
        text-decoration: none;
        font-weight: 600;
    }

        a:hover {
            text-decoration: underline;
            color: #003d7a;
        }

    p {
        text-align: center;
        font-weight: 600;
    }
</style>

<h2>Login</h2>

@if (ViewBag.Erro != null)
{
    <p style="color:red">@ViewBag.Erro</p>
}

<form method="post" action="/Account/Login">
    <div>
        <label>Email:</label>
        <input type="email" name="Email" required />
    </div>
    <div>
        <label>Senha:</label>
        <input type="password" name="Senha" required />
    </div>
    <button type="submit">Entrar</button>
    <a href="/Account/Register">Cadastrar</a>
</form>
